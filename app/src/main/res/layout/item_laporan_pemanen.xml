    <TextView
        android:id="@+id/tvTanggalLaporanItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal Laporan"
        android:textSize="12sp"/>
    -->
</LinearLayout>