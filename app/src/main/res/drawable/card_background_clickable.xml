<?xml version="1.0" encoding="utf-8"?>
<!--
File ini menggabungkan dua hal:
1. Sebuah bentuk dengan latar belakang putih dan sudut tumpul.
2. Efek riak (ripple) saat disentuh.
-->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight"> <!-- Ini adalah warna standar untuk efek riak -->

    <!-- Ini adalah "mask" atau cetakan untuk efek riak agar tidak keluar dari bentuk kartu -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="8dp" /> <!-- Radius sudut tumpul -->
        </shape>
    </item>

    <!-- Ini adalah tampilan visual kartu saat dalam keadaan normal (tidak diklik) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Warna latar belakang kartu -->
            <corners android:radius="8dp" /> <!-- Radius sudut tumpul -->
            <stroke android:width="1dp" android:color="#EAEAEA" /> <!-- Garis tepi tipis (opsional) -->
        </shape>
    </item>

</ripple>
